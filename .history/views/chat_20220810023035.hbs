<div class="ui container">
    <div class="ui grid">
        <div class="eight wide column">
            <div class="ui container">
                <h2>Messages</h2>
                <div id="posts">
                </div>
            </div>
        </div>
        <div class="eight wide column">
            <div class="card">
                <div class="ui container">
                    <h2>Send Message</h2>
                    <div class="ui form">
                        <div class="field">
                            <label for="usr">User: </label>
                            <input type="text" name="usr" id="usr">
                        </div>
                        <div class="field">
                            <label for="msg">Message: </label>
                            <textarea name="msg" id="msg"></textarea>
                        </div>
                        <div class="field">
                            <button class="ui primary button" onclick={{sendMsg()}}>
                                <i class="send icon"></i>
                                Send    
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>